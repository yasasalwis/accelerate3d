generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  passwordHash  String
  createdAt     DateTime       @default(now())
  notifications Notification[]
  printers      UserPrinter[]
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserPrinter {
  id                 String     @id @default(uuid())
  name               String
  ipAddress          String     @unique
  apiKey             String?
  status             String     @default("IDLE")
  type               String     @default("FDM")
  isAutoEjectCapable Boolean    @default(false)
  currentJobId       String?
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  printerId          String
  userId             String
  jobs               PrintJob[]
  user               User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  printer            Printer    @relation(fields: [printerId], references: [id])

  @@unique([userId, printerId])
}

model Manufacturer {
  id        String    @id @default(uuid())
  name      String    @unique
  country   String?
  website   String?
  createdAt DateTime  @default(now())
  printers  Printer[]
}

model PrinterTechnology {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  printers    Printer[]
}

model PrinterFeature {
  id          String                  @id @default(uuid())
  name        String                  @unique
  description String?
  createdAt   DateTime                @default(now())
  printers    PrinterFeatureMapping[]
}

model PrinterFeatureMapping {
  printerId String
  featureId String
  printer   Printer        @relation(fields: [printerId], references: [id], onDelete: Cascade)
  feature   PrinterFeature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@id([printerId, featureId])
}

model Printer {
  id                   String                  @id @default(uuid())
  manufacturerId       String
  model                String
  technologyId         String
  buildVolumeX         Float
  buildVolumeY         Float
  buildVolumeZ         Float
  maxPowerConsumptionW Int?
  priceUsd             Float?
  imageUrl             String?
  sourceUrl            String?
  createdAt            DateTime                @default(now())
  updatedAt            DateTime                @updatedAt
  manufacturer         Manufacturer            @relation(fields: [manufacturerId], references: [id])
  technology           PrinterTechnology       @relation(fields: [technologyId], references: [id])
  features             PrinterFeatureMapping[]
  userPrinters         UserPrinter[]

  @@unique([manufacturerId, model])
}

model Model {
  id            String     @id @default(uuid())
  name          String
  filePath      String
  gcodePath     String?
  widthMm       Float      @default(0.0)
  depthMm       Float      @default(0.0)
  heightMm      Float      @default(0.0)
  estimatedTime Int        @default(0)
  filamentGrams Float      @default(0.0)
  material      String?
  layerHeightMm Float?
  nozzleTempC   Int?
  bedTempC      Int?
  thumbnailUrl  String?
  createdAt     DateTime   @default(now())
  jobs          PrintJob[]
}

model PrintJob {
  id                 String      @id @default(uuid())
  userPrinterId      String
  modelId            String
  status             String      @default("PENDING")
  startTime          DateTime?
  endTime            DateTime?
  autoEjectTriggered Boolean     @default(false)
  createdAt          DateTime    @default(now())
  model              Model       @relation(fields: [modelId], references: [id])
  userPrinter        UserPrinter @relation(fields: [userPrinterId], references: [id], onDelete: Cascade)
}

model MaterialStats {
  id                String @id @default(uuid())
  type              String
  costPerGram       Float
  color             String
  currentStockGrams Float
}
